<% include ../partials/header %>

<div class="container">
    
    <header class="jumbotron">
          <div class="container">
               <h1><span><i class="glyphicon glyphicon-tent"></i></span> Welcome to YelpCamp!</h1>
               <p>Let's Freedom Camp in New Zealand!</p>
               <p>    
                   <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
               </p>
          </div>
    </header>


    <div class="row text-center" style="display:flex; flex-wrap: wrap;">          
         <% campgrounds.forEach(function(camplist){ %>
          <div class="col-md-3 col-sm-6">
               <div class="card">
                   <img src="<%= camplist.image%>">
                   <div class="caption">
                         <h4><%= camplist.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= camplist._id%>" class="btn btn-primary">More Info</a>
                   </p>
               </div>
          </div>
               <% }); %>
    </div>
</div>


<% include ../partials/footer %>
